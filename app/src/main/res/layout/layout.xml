<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context = "com.example.assignmentsxml.MainActivity"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:orientation = "vertical">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple_200"
            android:gravity="center"
            android:paddingBottom="@dimen/abc_action_bar_icon_vertical_padding_material"
            android:paddingTop="@dimen/abc_action_bar_icon_vertical_padding_material"
            android:text="Animation"
            android:textColor = "#FFFFFF"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">
            <Button
                android:id = "@+id/btns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Play Animation 1"/>
            <Button
                android:id = "@+id/btnls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Play Animation 2"/>

        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/image"
        android:layout_width="500px"
        android:layout_height="500px"
        android:layout_centerInParent="true"
        android:src="@drawable/samples1" />






</RelativeLayout>